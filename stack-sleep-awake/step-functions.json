{
  "Comment": "An example of the Amazon States Language using a parallel state to execute two branches at the same time.",
  "StartAt": "Send Notification",
  "States": {
    "Send Notification": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_send-notification",
      "Next": "RestoreRDS"
    },
    "RestoreRDS": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_restore-rds",
      "ResultPath": "$.rdsSnapshot",
      "Next": "RestoreBeanstalk"
    },
    "RestoreBeanstalk": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_restore-beanstalk",
      "ResultPath": "$.beanstalkTemplate",
      "Next": "Parallel"
    },
    "Parallel": {
      "Type": "Parallel",
      "Next": "Add Security Group Rule",
      "Branches": [{
        "StartAt": "Request RDS Status",
        "States": {
          "Request RDS Status": {
            "Type": "Task",
            "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_get-rds-status",
            "ResultPath": "$.rdsStatus",
            "Next": "Check If Ready"
          },
          "Wait Thirty Seconds": {
            "Type": "Wait",
            "Seconds": 30,
            "Next": "Request RDS Status"
          },
          "Check If Ready": {
            "Type": "Choice",
            "Choices": [{
              "Variable": "$.rdsStatus",
              "StringEquals": "available",
              "Next": "End1"
            }],
            "Default": "Wait Thirty Seconds"
          },
          "End1": {
            "Type": "Succeed"
          }
        }
      }, {
        "StartAt": "Request Beanstalk Status",
        "States": {
          "Request Beanstalk Status": {
            "Type": "Task",
            "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_get-beanstalk-status",
            "ResultPath": "$.beanstalkStatus",
            "Next": "Check If Beanstalk Ready"
          },
          "Wait Thirty Seconds2": {
            "Type": "Wait",
            "Seconds": 30,
            "Next": "Request Beanstalk Status"
          },
          "Check If Beanstalk Ready": {
            "Type": "Choice",
            "Choices": [{
              "Variable": "$.beanstalkStatus",
              "StringEquals": "Ready",
              "Next": "End"
            }],
            "Default": "Wait Thirty Seconds2"
          },
          "End": {
            "Type": "Succeed"
          }
        }
      }]
    },
    "Add Security Group Rule": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_set-sg-inbound-rule",
      "Next": "Deploy Beanstalk"
    },
    "Deploy Beanstalk": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_deploy-beanstalk",
      "Next": "Send Final Notification"
    },
    "Send Final Notification": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:us-east-1:314272986340:function:stack-awake_send-notification",
      "End": true
    }
  }
}
