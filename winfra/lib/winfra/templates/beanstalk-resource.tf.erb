<% require 'digest' %>
<% require 'securerandom' %>
variable "environment" {}
variable "application_name" {}
variable "instance_type" {}
variable "db_user" {}
variable "db_name" {}
variable "db_password" {}
variable "db_url" {}
<% if @has_vpc %>
  variable "vpc_id" {}
  variable "public_subnet_a" {}
  variable "public_subnet_b" {}
<% end %>

resource "aws_elastic_beanstalk_environment" "<%= @app_name %>-<%= @env %>" {
  name = "${var.application_name}-${var.environment}"
  application = "<%= @app_name %>"
  solution_stack_name = "64bit Amazon Linux 2017.03 v2.4.0 running Ruby 2.3 (Puma)"
  cname_prefix = "${var.application_name}-${var.environment}"
  <% if @has_vpc %>

    setting {
      namespace = "aws:ec2:vpc"
      name      = "VPCId"
      value     = "${var.vpc_id}"
    }

    setting {
      namespace = "aws:ec2:vpc"
      name      = "Subnets"
      value     = "${var.public_subnet_a}, ${var.public_subnet_b}"
    }

    setting {
      namespace = "aws:ec2:vpc"
      name      = "AssociatePublicIpAddress"
      value     = "true"
    }
  <% end %>

  setting {
    namespace = "aws:autoscaling:launchconfiguration"
    name      = "SecurityGroups"
    value     = "${aws_security_group.<%= @app_name %>-<%= @env %>.name}"
  }

  setting {
    namespace = "aws:autoscaling:launchconfiguration"
    name = "InstanceType"
    value = "${var.instance_type}"
  }

  setting {
    namespace = "aws:autoscaling:launchconfiguration"
    name      = "IamInstanceProfile"
    value     = "${aws_iam_instance_profile.<%= @app_name %>-<%= @env %>.arn}"
  }

  setting {
    namespace = "aws:elasticbeanstalk:application:environment"
    name = "DATABASE_URL"
    value = "postgres://${var.db_user}:${var.db_password}@${var.db_url}:5432/${var.db_name}"
  }

  setting {
    namespace = "aws:elasticbeanstalk:application:environment"
    name = "SECRET_KEY_BASE"
    value = "<%= Digest::SHA512.hexdigest(SecureRandom.uuid) %>"
  }
}
