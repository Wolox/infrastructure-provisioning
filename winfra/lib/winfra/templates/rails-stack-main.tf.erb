variable "application_name" {
  default     = "<%= @app_name %>"
  description = "Identifier for Beanstalk Application"
}

variable "<%= @env %>_database_password" {
  description = "RDS Master user password"
}

<% if @has_vpc %>
module "vpc" {
  source = "./<%= @env %>/vpc"
}
<% end %>

module "<%= @env %>_api" {
  source = "./<%= @env %>/beanstalk"
  application_name = "${var.application_name}"
  environment = "<%= @env %>"
  instance_type = "t2.medium"
  db_user = "${module.rds.db_user}"
  db_name = "${module.rds.db_name}"
  db_password = "${var.database_password}"
  db_url = "${module.rds.db_url}"

  <% if @has_vpc %>
  vpc_id = "${module.vpc.id}"
  public_subnet_a = "${module.vpc.public_subnet_a}"
  public_subnet_b = "${module.vpc.public_subnet_b}"
  <% end %>
}

module "<%= @env %>_rds" {
  source = "./<%= @env %>/rds"
  application_name = "${var.application_name}"
  environment = "<%= @env %>"
  engine = "postgres"
  engine_version = "9.5.4"
  storage = "10"
  instance_class = "db.t2.micro"
  database_password = "${var.<%= @env %>_database_password}"
  beanstalk_sg_id = "${module.api.beanstalk_sg_id}"

  <% if @has_vpc %>
  private_subnet_a = "${module.vpc.private_subnet_a}"
  private_subnet_b = "${module.vpc.private_subnet_b}"
  vpc_id = "${module.vpc.id}"
  <% end %>
}
